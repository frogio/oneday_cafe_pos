<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id = "@+id/menu_elem_id"
    >

        <TextView
            android:id="@+id/menu_elem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:text="메뉴 이름"
            android:textColor="#ffffff"
            android:textSize="30sp" />


        <LinearLayout
            android:id="@+id/menu_elem_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_elem_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ff0000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text = "HOT"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/menu_elem_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price 2"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginRight="15dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#CFE8FC"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text = "ICE"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:id="@+id/menu_elem_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price 1"
                android:textColor="#ffffff"
                android:textSize="20sp"
                />

        </LinearLayout>

</RelativeLayout>